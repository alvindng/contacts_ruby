<h1>Add Your Email Address</h1>
<form action="/contact/<%= @contact.id() %>/email" method="post">
  <input type="hidden" name="id" value="<%= @contact.id() %>">
  <div class="form-group">
    <label for="mail">Enter your Email Address</label>
    <input type="text" name="mail" id="mail" value="" class="form-control">
  </div>
  <div class="form-group">
    <label for="etype">Enter your Email Type</label>
    <input type="text" name="etype" id="etype" value="" class="form-control">
  </div>
  <button type="submit" name="submit">Add Email Address</button>
  <a href="/contact/<%= @contact.id() %>"><button class="btn-warning" type="button" name="back">Go Back</button></a>
</form>
