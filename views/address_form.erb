<h1>Add Your Address</h1>
<form action="/contact/<%= @contact.id() %>/address" method="post">
  <input type="hidden" name="id" value="<%= @contact.id() %>">
  <div class="form-group">
    <label for="street">Enter your Street Address</label>
    <input type="text" name="street" id="street" value="" class="form-control">
  </div>
  <div class="form-group">
    <label for="city">Enter your city</label>
    <input type="text" name="city" id="city" value="" class="form-control">
  </div>
  <div class="form-group">
    <label for="state">Enter your State</label>
    <input type="text" name="state" id="state" value="" class="form-control">
  </div>
  <div class="form-group">
    <label for="zip">Enter your Zip Code</label>
    <input type="number" name="zip" id="zip" value="" class="form-control">
  </div>
  <div class="form-group">
    <label for="atype">Enter your Address Type</label>
    <input type="text" name="atype" id="atype" value="" class="form-control">
  </div>
  <button type="submit" name="submit">Add Address</button>
  <a href="/contact/<%= @contact.id() %>"><button class="btn-warning" type="button" name="back">Go Back</button></a>
</form>
